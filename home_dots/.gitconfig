[alias]
	s = status -sb
	c = commit
	ca = commit -am
	br = branch
	co = checkout
	di = diff
	dic = diff --cached
	lg = log -p
	lol = log --graph --decorate --pretty=oneline --abbrev-commit
	lola = log --graph --decorate --pretty=oneline --abbrev-commit -- all
	ls = ls-files
	# Show files ignored by git:
	ign = ls-files -o -i --exclude-standard
	shoot = push origin --delete
	unstage = reset HEAD --
	prev = checkout -
	discard = checkout --
	sl = stash list
[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[core]
	whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
	editor = nvim
	quotepath = false
	excludesfile = ~/.gitignore
	hooksPath = /dev/null
	symlinks = true
	autocrlf = false
	sshCommand = "ssh -i ~/.ssh/config"
[merge]
	tool = nvim -d
[filter "lfs"]
	process = git-lts filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
[push]
	default = current
[checkout]
	defaultRemote = origin
[url "git@github.com:"]
	insteadOf = https://github.com/
[pull]
	rebase = true
[init]
	defaultBranch = main
[includeIf "gitdir:~/code/work/"]
    path = ~/.gitconfig-work

